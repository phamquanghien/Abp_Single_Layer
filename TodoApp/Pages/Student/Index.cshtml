@page
@model TodoApp.Pages.StudentModel

@section styles {
    <abp-style src="/Pages/Student/Index.cshtml.css" />
}
@section scripts {
    <abp-script src="/Pages/Student/Index.cshtml.js" />
}

<div class="container">
    <abp-card>
        <abp-card-body>
            <div class="w3-margin-bottom">
                <b class="w3-xlarge">Student List</b>
                <button onclick="document.getElementById('id01').style.display='block'" class="w3-button w3-blue w3-border w3-round w3-right w3-margin-bottom">Add new Student</button>
            </div>
            <!-- FORM FOR NEW TODO ITEMS -->
            <div>
                <form id="NewItemForm" class="w3-container">
                    <div class="w3-row-padding">
                        <div class="w3-third">
                            <input id="FullName" type="text" class="w3-input w3-border w3-round" placeholder="Enter Full name...">
                        </div>
                        <div class="w3-third">
                            <input id="Address" type="text" class="w3-input w3-border w3-round" placeholder="Enter Address...">
                        </div>
                        <div class="w3-third">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            
            <table id = "studentList" class="w3-table w3-bordered w3-border-top w3-border-red">
                <tr>
                    <th>FullName</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
                @foreach (var student in Model.Students){
                    <tr>
                        <td>@student.FullName</td>
                        <td>@student.Address</td>
                        <td data-id="@student.Id"><i class="fa fa-trash-o"></i></td>
                    </tr>
                }
            </table>
        </abp-card-body>
    </abp-card>
</div>